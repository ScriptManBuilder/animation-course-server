# Database Configuration - Animation Learning eCourses Project (PostgreSQL)
# Для продакшна замените на реальный DATABASE_URL от хостинга (Render, Railway, etc.)
DATABASE_URL="postgresql://username:password@host:port/database_name"

# JWT Configuration - Unique for Animation Learning eCourses
JWT_SECRET="your_unique_jwt_secret_key_here"
JWT_EXPIRES_IN="7d"

# Server Configuration - Different port from other projects
PORT=3006
NODE_ENV=production

# CORS Configuration - Animation Learning Course domains
ALLOWED_ORIGINS="https://your-frontend-domain.com,http://localhost:3000,http://localhost:3001"

# Application Settings
APP_NAME="Animation Learning eCourses Server"
APP_VERSION="1.0.0"

# Email Configuration - Animation Learning eCourses
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@domain.com"
SMTP_PASS="your_app_password_here"

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_FOLDER="uploads"

# Security Settings - Unique for Animation Learning eCourses
BCRYPT_ROUNDS=12
SESSION_SECRET="your_unique_session_secret_here"

# API Keys - Animation Learning eCourses specific
API_KEY="your_unique_api_key_here"